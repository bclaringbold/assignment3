<% include ../partials/header.ejs %>
<main class="container">
    <h1>Edit a Contact</h1>
    <div class="col-sm-4">
        <form method="post">

            <fieldset class="form-group">
                <label for="displayName">Display Name: *</label>
                <input name="displayName" type="text" class="form-control" required value="<%= contacts.displayName %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= contacts.email %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="contactNumber">Telephone Number: *</label>
                <input name="contactNumber" type="tel" class="form-control" required value="<%= contacts.contactNumber %>" />
            </fieldset>
                    
            
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-success" title="Update">
                    <i class="fa fa-save"></i> Update</button>
                <a href="/contacts/delete/<%= contacts._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/contacts" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>

<% include ../partials/boot.ejs %>
<% include ../partials/footer.ejs %>